<%= form_for(@operation) do |f| %>
  <% if @operation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@operation.errors.count, "error") %> prohibited this operation from being saved:</h2>

      <ul>
      <% @operation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :transaction_type %><br>
    <% Operation::TRANSACTION_TYPES.each do |key, value| %>
      <%= f.radio_button :transaction_type, value %>
      <%= f.label key, t("operations.transaction_type.#{key.downcase}") %><br>
    <% end %>
    </br>
  </div>
  <div class="field">
    <%= f.label :account %><br>
    <%= f.collection_select(:account_id, Account.all, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :transfer_account %><br>
    <%= f.collection_select(:transfer_account_id, Account.all, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_field :date %>
  </div>
  <div class="field">
    <%= f.label :amount %><br>
    <%= f.text_field :amount %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
