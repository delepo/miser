<nav class="top-bar" data-topbar role="navigation">
  <ul class="title-area">
    <li class="name">
      <h1><%= link_to t('.title'), welcome_path %></h1>
    </li>
  </ul>

  <section class="top-bar-section">
    <ul class="right">
      <li class="has-dropdown no-click">
        <a href="#"><%= t('.menu.administration')%></a>
        <ul class="dropdown">
          <li><%= link_to t(Bank.model_name.human(count: 2)), banks_path %></li>
          <li><%= link_to t(Account.model_name.human(count: 2)), accounts_path %></li>
          <li><%= link_to t(Operation.model_name.human(count: 2)), operations_path %></li>
          <li><%= link_to t(User.model_name.human(count: 2)), users_path %></li>
        </ul>
      </li>
      <% if LANGUAGES.size > 1 %>
        <li class="has-dropdown no-click">
          <a href="#"><%= t("locales.#{I18n.locale.to_s}") %></a>
          <ul class="dropdown">
            <% LANGUAGES.each do | language | %>
              <% if I18n.locale.to_s != language %>
                <li><%= link_to t("locales.#{language}"), welcome_path(set_locale: language) %></li>
              <% end -%>
            <% end %>
          </ul>
        </li>
      <% end %>
      <li><%= link_to t('.menu.logout'), logout_path, method: :delete %></li>
    </ul>
  </section>
</nav>