<h1><%= User.model_name.human(count: 2) %></h1>

<table>
  <thead>
    <tr>
      <th><%= User.human_attribute_name('name') %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to t('general.show'), user %></td>
        <td><%= link_to t('general.edit'), edit_user_path(user) %></td>
        <td><%= link_to t('general.destroy'), user, method: :delete, data: { confirm: t('general.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new'), new_user_path, class: 'button' %>
