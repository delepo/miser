<h1><%= t('shared.navigation.welcome') %></h1>

<table>
  <thead>
    <tr>
      <th><%= Account.human_attribute_name('name') %></th>
      <th><%= t('.final_balance') %></th>
    </tr>
  </thead>

  <tbody>
    <% Account.all.each do |account| %>
      <tr>
        <td><%= link_to account.name, account_operations_path(account) %></td>
        <td class='text-right'><%= number_to_currency(account.final_balance) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

